// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = "postgresql://admin:admin123@localhost:5432/mydb_shadow"
}

model User {
  id         Int         @id @default(autoincrement())
  username   String      @unique
  email      String      @unique
  password   String
  createdAt  DateTime    @default(now())
  questions  Question[]
  answers    Answer[]
  likes      Like[]      // ðŸ‘ˆ relation: which answers this user has liked
}

model Question {
  id         Int        @id @default(autoincrement())
  title      String
  content    String
  createdAt  DateTime   @default(now())
  userId     Int

  user       User       @relation(fields: [userId], references: [id])
  answers    Answer[]
}

model Answer {
  id         Int        @id @default(autoincrement())
  content    String
  likes      Int        @default(0)
  createdAt  DateTime   @default(now())
  userId     Int
  questionId Int

  user       User       @relation(fields: [userId], references: [id])
  question   Question   @relation(fields: [questionId], references: [id])
  likedBy    Like[]     // ðŸ‘ˆ relation: users who liked this answer
}

// ðŸ‘‡ New model to store which user liked which answer
model Like {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  answer    Answer   @relation(fields: [answerId], references: [id])
  answerId  Int
  createdAt DateTime @default(now())

  @@unique([userId, answerId]) // ðŸ‘ˆ ensures one like per user per answer
}
